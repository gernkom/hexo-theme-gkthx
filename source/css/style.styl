        .post {
          width: 50%;
          margin: auto;

          @import "_partial/highlight"
        }

        




        .post-item {
          display: block;
          text-decoration: none;
          padding: 4px;
          transition: all 0.3s;
          border-right: 3px solid transparent;
          border-left: 3px solid #009688;
          cursor: pointer;
          margin: 5px;
        }
        .post-item:hover {
          transform: translateY(-5px);
          transform: translateX(-5px);
        }
        .post-archive {
          margin: auto;
          width: 80%;
        }
        

        .main {
            width: 100%; 
            height: 100%; 
        }

        #nav {
            width: 40%; 
            height: 40%; 
            position:fixed; 
            left: 30%; 
            top: 30%;
        }



        #sideToggle{ 
        display: none; 
        }  
        #sideToggle:checked + aside { 
            left:0; 
        }  
        #sideToggle:checked ~ #wrap{ 
            -webkit-transform: rotate(180deg);
        } 
        body > aside { 
            position: fixed; 
            top:0; 
            bottom:0; 
            left:-250px; 
            width:250px; 
            background:#232323; 
            transition:0.3s ease-out; 
            -webkit-transition:0.3s ease-out; 
            z-index: 999;
        }

        #wrap{
            top: 10px; 
            left: 10px; 
            position: fixed;
            transition:0.9s ease-out; 
            -webkit-transition:0.9s ease-out; 
            z-index: 1000;

        }

        .sidebar {
            width: 200px;
            height: 90%; 
            top: 5%; 
            left: 25px; 
            position: absolute; 
            font-family: Consolas, Mononoki, "Roboto Sans", "Liberation Mono", monospace;
        }

        a {
            color: #2aa198;
            text-decoration: none;
        }

